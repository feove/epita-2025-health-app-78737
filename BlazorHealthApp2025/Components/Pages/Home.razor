@page "/"
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Iboren Health</PageTitle>

<div class="hero-container">
    <div class="hero-content">
        <h1 class="hero-title">Welcome to Iboren Health</h1>
        <p class="hero-subtitle">Your gateway to effortless appointment scheduling and patient management.</p>
        <button class="hero-btn" @onclick="@GoToLogin">Get Started</button>
    </div>
</div>

@code {
    private void GoToLogin()
    {
        NavigationManager.NavigateTo("/Account/Login");
    }
}
