@page "/login"
@using HospitalApp.Models
@using Microsoft.AspNetCore.Components.Forms
@inject NavigationManager Navigation
@inject HttpClient Http

<h3>Login</h3>

<EditForm Model="@loginUser" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div>
        <label>Email:</label>
        <InputText @bind-Value="loginUser.Email" />
    </div>
    <div>
        <label>Password:</label>
        <InputText @bind-Value="loginUser.PasswordHash" type="password" />
    </div>

    <button type="submit">Login</button>
</EditForm>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <p style="color:red;">An error occurred: @errorMessage</p>
}

@code {
    private User loginUser = new User();
    private string errorMessage = string.Empty;

    private async Task HandleValidSubmit()
    {
        try
        {
            var response = await Http.PostAsJsonAsync("api/users/login", loginUser);
            if (response.IsSuccessStatusCode)
            {
                Navigation.NavigateTo("/");
            }
            else
            {
                errorMessage = "Login failed.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
    }
}
